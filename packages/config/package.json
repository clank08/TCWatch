{
  "name": "@tcwatch/config",
  "version": "1.0.0",
  "description": "Shared configuration for TCWatch",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./eslint": {
      "types": "./dist/eslint/index.d.ts",
      "import": "./dist/eslint/index.js"
    },
    "./prettier": {
      "types": "./dist/prettier/index.d.ts",
      "import": "./dist/prettier/index.js"
    },
    "./env": {
      "types": "./dist/env/index.d.ts",
      "import": "./dist/env/index.js"
    }
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "@types/node": "^20.9.0"
  },
  "peerDependencies": {
    "eslint": "^8.54.0",
    "prettier": "^3.1.0"
  },
  "keywords": [
    "tcwatch",
    "config",
    "shared",
    "eslint",
    "prettier"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/tcwatch.git",
    "directory": "packages/config"
  },
  "author": "TCWatch Team",
  "license": "MIT"
}
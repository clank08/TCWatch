{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@tcwatch/shared-types": ["./packages/shared-types/src"],
      "@tcwatch/shared-types/*": ["./packages/shared-types/src/*"],
      "@tcwatch/config": ["./packages/config/src"],
      "@tcwatch/config/*": ["./packages/config/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".expo",
    "android",
    "ios"
  ]
}
# TCWatch Environment Variables Template
# Copy this file to .env.local for development or configure in your deployment platform

# ===== APPLICATION SETTINGS =====
NODE_ENV=development
APP_NAME=TCWatch
APP_VERSION=1.0.0
PORT=3001
HOST=0.0.0.0

# ===== API CONFIGURATION =====
API_BASE_URL=http://localhost:3001
API_PREFIX=/api
CORS_ORIGIN=http://localhost:3000,http://localhost:19006
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000

# ===== DATABASE CONFIGURATION =====
# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
DATABASE_URL=postgresql://postgres:password@localhost:5432/tcwatch

# ===== REDIS CONFIGURATION =====
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_PREFIX=tcwatch:

# ===== AUTHENTICATION =====
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
SESSION_SECRET=your_session_secret_minimum_32_characters

# ===== EXTERNAL API KEYS =====
# Watchmode API - Get from https://api.watchmode.com/
WATCHMODE_API_KEY=your_watchmode_api_key

# The Movie Database (TMDb) - Get from https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key

# TheTVDB API - Get from https://thetvdb.com/api-information
THETVDB_API_KEY=your_thetvdb_api_key

# TVMaze API (No key required)
TVMAZE_BASE_URL=https://api.tvmaze.com

# ===== SEARCH CONFIGURATION =====
# Meilisearch Configuration
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_MASTER_KEY=your_meilisearch_master_key

# ===== TEMPORAL WORKFLOW =====
TEMPORAL_SERVER_URL=localhost:7233
TEMPORAL_NAMESPACE=tcwatch
TEMPORAL_TASK_QUEUE=tcwatch-queue

# ===== MONITORING =====
# Sentry Configuration - Get from https://sentry.io/
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development
SENTRY_DEVELOPMENT=false

# ===== FILE STORAGE =====
STORAGE_PROVIDER=local
STORAGE_PATH=./uploads

# ===== EMAIL CONFIGURATION =====
EMAIL_PROVIDER=console

# ===== LOGGING =====
LOG_LEVEL=debug
LOG_FORMAT=pretty

# ===== MOBILE APP CONFIGURATION =====
EXPO_PUBLIC_API_URL=http://localhost:3001
EXPO_PUBLIC_ENVIRONMENT=development
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.19.17",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "tcwatch",
    "e2e",
    "testing",
    "playwright",
    "automation"
  ]
}